# Environment variables for Render.com deployment
# Copy these to your Render.com environment variables

DEBUG=False
DJANGO_SETTINGS_MODULE=parental_control_system.settings

# Database (if using external database)
# DATABASE_URL=your_database_url_here

# Secret Key (generate a new one for production)
SECRET_KEY=your-production-secret-key-here

# Allowed hosts
ALLOWED_HOSTS=parental-control-web.onrender.com,www.parental-control-web.onrender.com,pcs-4ngp.onrender.com

# Static files
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Security settings
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
